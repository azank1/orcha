# Environment variables template for orcha-1
# Copy this file to .env and fill in your actual values

# ===========================================
# FOODTEC API CONFIGURATION
# ===========================================

# Base URL for FoodTec API
FOODTEC_BASE=https://pizzabolis-lab.foodtecsolutions.com

# API Authentication passwords
FOODTEC_MENU_PASS=your_menu_password_here
FOODTEC_VALIDATE_PASS=your_validate_password_here  
FOODTEC_ACCEPT_PASS=your_accept_password_here

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Server ports (for TypeScript engine)
MCP_SERVER_PORT=9090
PROXY_SERVER_PORT=8080

# Python MCP server port (for P2A system)
PYTHON_MCP_PORT=8000

# ===========================================
# LOGGING & DEBUG
# ===========================================

LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# CACHING CONFIGURATION  
# ===========================================

CACHE_TTL_SECONDS=300
ENABLE_CACHING=true