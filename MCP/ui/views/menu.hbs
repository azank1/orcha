<!DOCTYPE html>
<html>
<head>
    <title>MCP-UI: Agent's Eye</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="header">
        <h1>{{message}}</h1>
        {{#if instructions}}
        <p>{{instructions}}</p>
        {{else}}
        <p>This shows what the agent "sees" from MCP tools</p>
        {{/if}}
    </div>

    {{#if error}}
    <div class="error">
        <h2>Connection Error</h2>
        <p>{{error}}</p>
        <p>{{helpText}}</p>
    </div>
    {{else}}
    
    {{#if menu}}
    <div class="tool-info">
        <strong>Tool:</strong> foodtec.export_menu<br>
        <strong>Status:</strong> {{status}}<br>
        <strong>Success:</strong> {{success}}<br>
        <strong>Categories:</strong> {{categories.length}}
    </div>

    {{#if categories}}
    <div class="menu-grid">
        {{#each categories}}
        <div class="category-card">
            <h3>{{this.category}}</h3>
            <div class="item-count">{{this.items.length}} items</div>
            <div class="items">
                {{#each this.items}}
                <div class="item">
                    <div class="item-name">{{this.item}}</div>
                    {{#each this.sizePrices}}
                    <div class="item-price">{{this.size}}: ${{this.price}}</div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="no-data">No menu categories found</div>
    {{/if}}
    {{/if}}
    
    {{/if}}

    <div class="nav-links">
        <a href="/">Home</a> | 
        <a href="/menu">Refresh Menu</a>
    </div>
</body>
</html>
